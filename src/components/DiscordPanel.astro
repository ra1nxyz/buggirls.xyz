---
import { Image } from 'astro:assets';

interface Props {
  banner: string;
  avatar: string;
  username: string;
  PlatformIcon: any; // ??
  href?: string;
  socials?: { icon: any; handle: string; label: string; url?: string }[];
}

const { banner, avatar, username, PlatformIcon, socials = [], href } = Astro.props;
---

<style>
  
  .panel-row {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
    margin: 2rem auto;
    margin-top: 0.5rem;
    max-width: 800px;
    width: 120%;
  }
  .card {
    position: relative;
    flex: 0 0 400px;
    height: 220px;
    border-radius: 10px;
    overflow: hidden;
    background: #121e2b;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    box-shadow: 0 4px 18px rgba(0,0,0,0.10);
    margin-top: 0;
    /* make this work when rendered as an <a> */
    text-decoration: none;
    color: inherit;
    display: block;
  }
  .banner {
    width: 100%;
    height: 130px;
    object-fit: cover;
  }
  .content {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding: 0.5rem 1rem;
    gap: 0.7rem;
    margin-top: -3.5px;
  }
  .avatar {
    width: 72px;
    height: 72px;
    border-radius: 50%;
    object-fit: cover;
  }
  .username {
    font-weight: 500;
    font-size: 1.1rem;
    letter-spacing: 0.01em;
  }
  .PlatformIcon {
    position: absolute;
    right: 1.2rem;
    bottom: 0.8rem;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
  }
  .card:focus {
    outline: 3px solid rgba(74,170,255,0.25);
    outline-offset: 2px;
  }
  .socials {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
    margin-top: 0.5rem;
  }
  .social-row {
    display: flex;
    align-items: center;
    gap: 0.7rem;
    font-size: 1rem;
    color: #fff;
    background: transparent;
    border-radius: 6px;
    padding: 0.4rem 0.9rem;
    min-width: 160px;
  }
  .social-icon {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    fill: #fff;
    overflow: visible;
  }
  .social-handle {
    font-weight: 500;
    color: #2d4f6e;
    text-decoration: none;
    background: #121e2b;
    color: #fff;
    border-radius: 999px;
    padding: 0.2em 0.8em;
    margin-left: 0.5em;
    font-size: 1em;
  }
</style>

<div class="panel-row">
  {href ? (
    <a class="card" href={href} target="_blank" rel="noopener noreferrer" aria-label={`Open ${username} profile`}>
      <Image src={banner} alt="Banner" class="banner" width={800} height={400} loading="eager" fetchpriority="high"/>
      <div class="content">
        <Image src={avatar} alt={`${username} avatar`} width={128} height={128} class="avatar" loading="eager" fetchpriority="high"/>
        <div class="username">{username}</div>
      </div>
      <span class="PlatformIcon"><PlatformIcon /></span>
    </a>
  ) : (
    <div class="card">
    <img src={banner} alt="Banner" class="banner" />
      <div class="content">
        <img src={avatar} alt={`${username} avatar`} />
        <div class="username">{username}</div>
      </div>
      <span class="PlatformIcon"><PlatformIcon /></span>
    </div>
  )}
  {socials.length > 0 && (
    <div class="socials">
      {socials.map(({ icon: Icon, label, handle, url }) => (
        <div class="social-row">
          <span class="social-icon"><Icon /></span>
          <span>{label}</span>
          {url ? (
            <a href={url} class="social-handle" target="_blank" rel="noopener noreferrer">{handle}</a>
          ) : (
            <span class="social-handle">{handle}</span>
          )}
        </div>
      ))}
    </div>
  )}
</div>

